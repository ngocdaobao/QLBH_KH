<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="762.0" prefWidth="892.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.qlbh_kh.controllers.DanhSachNguoiNhanXuatController">
    <children>
        <TextField fx:id="receiverNameField" promptText="Nhập tên người nhận hàng" />
        <HBox prefHeight="200.0" prefWidth="200.0">
            <children>
                <TableView fx:id="receiverList" prefHeight="200.0" prefWidth="656.0">
                    <columns>
                        <TableColumn fx:id="receiverNameColumn" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="140.0" text="Tên Người Nhận" />
                        <TableColumn fx:id="addressColumn" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="147.0" text="Địa chỉ" />
                        <TableColumn fx:id="phoneNumberColumn" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="139.0" text="Số điện thoại" />
                        <TableColumn fx:id="emailColumn" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="126.0" text="Email" />
                        <TableColumn fx:id="countColumn" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="103.0" text="Số đơn hàng" />
                    </columns>
                </TableView>
                <VBox prefHeight="200.0" prefWidth="114.0">
                    <padding>
                        <Insets bottom="10.0" top="10.0" />
                    </padding>
                    <children>
                        <Button fx:id="addNewReceiver" onAction="#addNewReceiver" prefHeight="38.0" prefWidth="193.0" text="Thêm người nhận">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Button>
                        <Button fx:id="reloadTable" onAction="#loadReceiverList" layoutX="10.0" layoutY="20.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="193.0" text="Tải lại bảng" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>
